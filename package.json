{
  "name": "@mrgrain/cdk-updown",
  "description": "Self-executable CDK apps",
  "repository": {
    "type": "git",
    "url": "git@github.com:mrgrain/cdk-updown.git"
  },
  "scripts": {
    "biome": "npx projen biome",
    "build": "npx projen build",
    "bump": "npx projen bump",
    "clobber": "npx projen clobber",
    "compile": "npx projen compile",
    "default": "npx projen default",
    "eject": "npx projen eject",
    "logo": "npx projen logo",
    "package": "npx projen package",
    "post-compile": "npx projen post-compile",
    "post-upgrade": "npx projen post-upgrade",
    "pre-compile": "npx projen pre-compile",
    "release": "npx projen release",
    "test": "npx projen test",
    "test:watch": "npx projen test:watch",
    "unbump": "npx projen unbump",
    "upgrade": "npx projen upgrade",
    "watch": "npx projen watch",
    "projen": "npx projen"
  },
  "author": {
    "name": "Momo Kornher",
    "url": "https://moritzkornher.de",
    "organization": false
  },
  "devDependencies": {
    "@biomejs/biome": "^2",
    "@types/jest": "^30.0.0",
    "@types/node": "ts5.8",
    "aws-cdk-lib": "^2.204.0",
    "commit-and-tag-version": "^12",
    "constructs": "^10.0.0",
    "jest": "^30.0.4",
    "jest-junit": "^16",
    "mrpj": "^0.2.4",
    "projen": "^0.94.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "5.8.x"
  },
  "peerDependencies": {
    "aws-cdk-lib": "^2.174.0"
  },
  "dependencies": {
    "@aws-cdk/toolkit-lib": "^1.2.4",
    "@inquirer/select": "^4.2.4",
    "ansi-colors": "^4.1.3",
    "cli-table3": "^0.6.5",
    "yocto-spinner": "^1.0.0"
  },
  "main": "./lib/main.js",
  "license": "MIT",
  "homepage": "https://github.com/mrgrain/cdk-updown",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0",
  "jest": {
    "coverageProvider": "v8",
    "testMatch": [
      "<rootDir>/@(src|test)/**/*(*.)@(spec|test).ts?(x)",
      "<rootDir>/@(src|test)/**/__tests__/**/*.ts?(x)",
      "<rootDir>/@(projenrc)/**/*(*.)@(spec|test).ts?(x)",
      "<rootDir>/@(projenrc)/**/__tests__/**/*.ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "transform": {
      "^.+\\.[t]sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dev.json"
        }
      ]
    }
  },
  "types": "./lib/main.d.ts",
  "exports": {
    ".": {
      "types": "./lib/main.d.ts",
      "default": "./lib/main.js"
    }
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
